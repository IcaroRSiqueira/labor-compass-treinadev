<h1>Registrar vaga</h1>

<% if @vacancy.errors.any? %>
  <p>VocÃª deve corrigir os seguintes erros:</p>
  <ul>
  <% @vacancy.errors.full_messages.each do |message| %>
    <li> <%= message %> </li>
  <% end %>
  </ul>
<% end %>

<%= form_with model: @vacancy, local: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :skill %>
  <%= f.text_field :skill %>
  <%= f.label :wage %>
  <%= f.text_field :wage %>
  <%= f.label :role %>
  <%= f.text_field :role %>
  <%= f.label :end_date %>
  <%= f.date_field :end_date %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.submit 'Registrar vaga' %>
<% end %>
