<h3>Enviar proposta ao usuário</h3>

<%= form_with model: @proposal, url: entry_proposals_path(@entry) do |f| %>
  <%= f.label :start_date, 'Data prevista para início' %>
  <%= f.date_field :start_date %>
  <%= f.label :workload, 'Carga horária' %>
  <%= f.text_field :workload %>
  <%= f.label :benefits, 'Benefícios' %>
  <%= f.text_field :benefits %>
  <%= f.label :wage, 'Salário' %>
  <%= f.text_field :wage %>
  <%= f.label :details, 'Detalhes' %>
  <%= f.text_area :details %>
  <%= f.submit 'Enviar proposta' %>
<% end %>
